{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Takumo",
  "description": "Bidirectional AI code governance. Protect secrets going out, validate code coming in.",

  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5",
    "background": {
      "light": "#FAFAFA",
      "dark": "#09090B"
    }
  },

  "logo": {
    "light": "/logo/takumo-dark.svg",
    "dark": "/logo/takumo-light.svg",
    "href": "/"
  },

  "favicon": "/logo/favicon.svg",

  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": "system",
    "anchors": "sections",
    "rounded": "default",
    "icons": {
      "library": "lucide"
    }
  },

  "fonts": {
    "heading": {
      "family": "Geist Sans",
      "source": "https://cdn.vercel.com/fonts/geist-sans/Geist-Bold.woff2",
      "format": "woff2",
      "weight": 700
    },
    "body": {
      "family": "Geist Sans",
      "source": "https://cdn.vercel.com/fonts/geist-sans/Geist-Regular.woff2",
      "format": "woff2",
      "weight": 400
    }
  },

  "appearance": {
    "default": "dark",
    "strict": false
  },

  "background": {
    "decoration": "none",
    "color": {
      "light": "#FFFFFF",
      "dark": "#09090B"
    }
  },

  "navbar": {
    "links": [
      {
        "label": "Changelog",
        "href": "/changelog"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Request Access",
      "href": "mailto:jordant@takumo.com?subject=Takumo%20Access%20Request"
    }
  },

  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "installation"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              "concepts/how-it-works",
              "concepts/aegis-shield",
              "concepts/sentinel"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "patterns/supported",
              "changelog"
            ]
          }
        ]
      },
      {
        "tab": "CLI",
        "icon": "terminal",
        "groups": [
          {
            "group": "Commands",
            "pages": [
              "cli/overview",
              "cli/scan",
              "cli/tokenize",
              "cli/shield"
            ]
          }
        ]
      },
      {
        "tab": "AI Tools",
        "icon": "blocks",
        "groups": [
          {
            "group": "Integrations",
            "pages": [
              "ai-tools/overview",
              "ai-tools/claude-code",
              "ai-tools/cursor",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API",
        "icon": "code",
        "groups": [
          {
            "group": "Reference",
            "pages": [
              "api/overview",
              "api/create-session",
              "api/tokenize",
              "api/rehydrate"
            ]
          }
        ]
      }
    ]
  },

  "footer": {
    "socials": {
      "github": "https://github.com/SirTingling/takumo"
    }
  },

  "search": {
    "prompt": "Search docs..."
  },

  "contextual": {
    "options": ["copy", "view", "claude", "chatgpt", "cursor"]
  }
}
